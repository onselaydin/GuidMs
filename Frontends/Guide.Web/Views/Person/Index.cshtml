
@{
    ViewData["Title"] = "Index";
}
@model List<PersonViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kişiler</h5>

                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Firma</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Company</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                 }
                else
                {
                    <div class="alert alert-info">Kişi bulunamadı.</div>
                }

            </div>
        </div>
    </div>
</div>

