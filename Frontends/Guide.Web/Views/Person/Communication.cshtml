
@{
    ViewData["Title"] = "Communicaiton";
}

@model PersonViewModel


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kişi İletişim Bilgileri</h5>
                <input type="hidden" asp-for="UUID" />
                <a asp-controller="Person" asp-action="CreateCommInfo" asp-route-id="@Model.UUID" class="btn btn-primary mb-3">Ekle</a>
                @if (Model.Communications.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Tip</th>
                                <th>İçerik</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Communications)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Type</td>
                                    <td>@item.Content</td>
                                    <td>
                                        <a asp-controller="Person" asp-action="DeleteCommunication" asp-route-id="@item.UUID" class="btn btn-dark btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">İletişim bilgisi bulunamadı.</div>
                }

            </div>
        </div>
    </div>
</div>